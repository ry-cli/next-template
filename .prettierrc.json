{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "useTabs": false,
    "ignorePath": ".prettierignore",
    "jsxSingleQuote": false,
    "requireConfig": false,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "endOfLine": "auto"
}
